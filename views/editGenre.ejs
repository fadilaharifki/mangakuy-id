<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('partials/head',{title : 'Edit Comic'})%>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar')%>
    <%data.forEach(e=>{%>
      <form action="/genres/edit/<%= e.id %>" method="POST">
        <fieldset>
          <label>Genre:</label><br>
          <input type="text" name="genreName" value="<%= e.genreName %>"><br><br>
          <input type="submit" value="Save" style="background-color: green; border-radius: 5px; color: #ffffff;">
          <button style="background-color: brown; border-radius: 5px;"><a style="color: #ffffff;" href="http://localhost:3000/genres/edit/<%= e.id %>">Cencel</a></button>
        </fieldset>
      </form>
      <%})%>

    <!-- Script js -->
    <%- include('partials/script')%>
</body>
</html>