<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('partials/head',{title : 'Add Comic'})%>
<body>
    <!-- Navbar -->
    <%if(msg){%>
      <%= msg %>
    <%}%><br>
    <form action="/comics/add" method="POST">
        <fieldset>
          <label>Title:</label><br>
          <input type="text" name="title" ><br>
          <label>Author:</label><br>
          <input type="text" name="author" ><br>
          <label>PublicationYear:</label><br>
          <input type="integer" name="publicationYear" ><br>
          <label>Price:</label><br>
          <input type="integer" name="price" ><br>
          <label>Link:</label><br>
          <input type="text" name="picture" ><br>
          <label>Rating:</label><br>
          <input type="integer" name="rating" ><br><br>
          <input type="submit" value="Save" style="background-color: green; border-radius: 5px; color: #ffffff;">
          <button style="background-color: brown; border-radius: 5px;"><a style="color: #ffffff;" href="http://localhost:3000/comics/add">Cencel</a></button>
        </fieldset>
      </form>

    <!-- Script js -->
    <%- include('partials/script')%>
</body>
</html>
