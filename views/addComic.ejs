<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('partials/head',{title : 'Add Comic'})%>
<body>
    <!-- Navbar -->
    <%if(msg){%>
      <%= msg %>
    <%}%><br>
    <form action="/comics/add" method="POST" style="text-align: center;">
        <fieldset>
          <label>Title:</label><br>
          <input type="text" name="title" ><br>
          <label>Author:</label><br>
          <input type="text" name="author" ><br>
          <label>PublicationYear:</label><br>
          <input type="integer" name="publicationYear" ><br>
          <label>Price:</label><br>
          <input type="integer" name="price" ><br>
          <label>Link:</label><br>
          <input type="text" name="picture" ><br>
          <label>Rating:</label><br>
          <input type="integer" name="rating" ><br>
          <label>Genre:</label><br>
          <% data.forEach((e, index) => { %>
            <% if (index === 5) { %>
              <br>
            <% } %>
            <input type="checkbox" id="<%= e.genreName %>" name="GenreId" value="<%= e.id %>">
            <label for="<%= e.genreName %>"><%= e.genreName %></label>
          <% }) %>
           <br><br>

          <input type="submit" value="Save" style="background-color: green; border-radius: 5px; color: #ffffff;">
          <button style="background-color: brown; border-radius: 5px;"><a style="color: #ffffff;" href="/comics">Cancel</a></button>
        </fieldset>
      </form>

    <!-- Script js -->
    <%- include('partials/script')%>
</body>
</html>
